<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.caoimheharv.msd_assignment">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AdminMenu" />
        <activity android:name=".ManageStaff" />
        <activity android:name=".addStaffForm" />
        <activity android:name=".updateStaff" />
        <activity android:name=".ManageShifts" />
        <activity android:name=".addShift" />
        <activity android:name=".updateShift" />
        <activity android:name=".Settings" />
        <activity
            android:name=".standardMenu"
            android:label="@string/title_activity_standard_menu"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.caoimheharv.msd_assignment.MainActivity" />
        </activity>
    </application>

</manifest>
